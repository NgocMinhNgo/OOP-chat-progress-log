<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="TryUIIdea01.application.ChatAreaController">
<!--            stylesheets="@styles.css" style="-fx-background-color: #f5f5f5;">-->

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
                <ListView fx:id="messageListView" />
            </ScrollPane>
            <ProgressIndicator fx:id="loadingIndicator" visible="false"
                               StackPane.alignment="TOP_RIGHT">
                <StackPane.margin>
                    <Insets>
                        <top>10.0</top>
                        <right>10.0</right>
                        <bottom>0.0</bottom>
                        <left>0.0</left>
                    </Insets>
                </StackPane.margin>
            </ProgressIndicator>
        </StackPane>
    </center>

    <bottom>
        <HBox fx:id="inputBox" spacing="10" padding="10" alignment="CENTER">
            <TextField fx:id="inputField" promptText="What do you want to buy?"
                       style="-fx-padding: 10; -fx-font-size: 14;" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" text="Send"
                    style="-fx-background-color: #4a90e2; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>

